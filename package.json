{
    "name": "three-stages-of-react",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@craco/craco": "^6.3.0",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.10.2",
        "axios": "^0.24.0",
        "craco-alias": "^3.0.1",
        "formik": "^2.2.9",
        "history": "^5.0.1",
        "lodash": "^4.17.21",
        "primereact": "^6.6.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-redux": "^7.2.5",
        "react-router-dom": "^5.3.0",
        "react-scripts": "4.0.3",
        "redux-devtools-extension": "^2.13.9",
        "redux-logger": "^3.0.6",
        "redux-observable": "^2.0.0",
        "redux-persist": "^6.0.0",
        "rxjs": "^7.3.1",
        "typescript": "^4.4.3",
        "web-vitals": "^1.0.1"
    },
    "devDependencies": {
        "@digitalroute/cz-conventional-changelog-for-jira": "^6.5.0",
        "@types/lodash": "^4.14.171",
        "@types/react": "^17.0.36",
        "@types/react-dom": "^17.0.11",
        "@types/react-router-dom": "^5.3.2",
        "@types/redux-logger": "^3.0.9",
        "@typescript-eslint/eslint-plugin": "^4.28.5",
        "@typescript-eslint/parser": "^4.28.5",
        "commitizen": "^4.2.4",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "husky": "^7.0.1",
        "lint-staged": "^11.1.1",
        "node-sass": "^5.0.0",
        "prettier": "^2.3.2",
        "sass-loader": "^12.1.0"
    },
    "scripts": {
        "start": "craco start",
        "build": "craco build && mv build deploy",
        "test": "craco test",
        "env": "node scripts/set-environment.js",
        "lint": "eslint --ext .ts --ext .tsx ./src",
        "format": "prettier --write \"src/**/*.+(js|jsx|json|ts|tsx|yml|yaml|scss|md)\"",
        "commit": "cz",
        "patch": "standard-version --release-as patch",
        "minor": "standard-version --release-as minor",
        "release": "standard-version",
        "bump-patch": "yarn version --patch --no-git-tag-version && yarn patch",
        "bump-minor": "yarn version --minor --no-git-tag-version && yarn minor",
        "bump-major": "yarn version --major --no-git-tag-version && yarn release"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./commitizen.config.js"
        }
    },
    "lint-staged": {
        "*.+(ts|tsx)": [
            "eslint --fix --ext .ts --ext .tsx ./src"
        ],
        "*.+(json|ts|tsx|scss|md)": [
            "prettier --write ./src"
        ]
    }
}
